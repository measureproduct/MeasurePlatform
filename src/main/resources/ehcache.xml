<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd"
         name="CM1"
         updateCheck="false"
         maxBytesLocalHeap="16M">

    <!--
      This is a default configuration, it is re-configured by the CacheConfiguration Spring Bean, using the
      properties from the resources/config/*.yml files.
    -->

    <diskStore path="java.io.tmpdir"/>

    <defaultCache
            eternal="false"
            overflowToDisk="false"
            />

    <cache name="org.measure.platform.framework.domain.User"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="org.measure.platform.framework.domain.Authority"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="org.measure.platform.framework.domain.User.authorities"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="org.measure.platform.framework.domain.PersistentToken"
           timeToLiveSeconds="3600">
    </cache>

    <cache name="org.measure.platform.framework.domain.User.persistentTokens"
           timeToLiveSeconds="3600">
    </cache>
    
    <cache name="org.measure.platform.core.data.entity.Project"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="org.measure.platform.core.data.entity.Project.phases"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="org.measure.platform.core.data.entity.Project.instances"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="org.measure.platform.core.data.entity.Phase"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="org.measure.platform.core.data.entity.Phase.dashboards"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="org.measure.platform.core.data.entity.Phase.views"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="org.measure.platform.core.data.entity.Phase.nexts"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="org.measure.platform.core.data.entity.Dashboard"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="org.measure.platform.core.data.entity.Dashboard.views"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="org.measure.platform.core.data.entity.MeasureInstance"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="org.measure.platform.core.data.entity.MeasureInstance.properties"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="org.measure.platform.core.data.entity.MeasureInstance.depends"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="org.measure.platform.core.data.entity.MeasureProperty"
        timeToLiveSeconds="3600">
    </cache>

    <cache name="org.measure.platform.core.data.entity.MeasureView"
        timeToLiveSeconds="3600">
    </cache>

    <!-- jhipster-needle-ehcache-add-entry -->
</ehcache>
